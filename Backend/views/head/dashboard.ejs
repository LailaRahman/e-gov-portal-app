<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Department Overview</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  <style>
    body {
      background: #f8fafc;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      padding-bottom: 2rem;
    }

    h1, h2, h3 {
      text-align: center;
      font-weight: 700;
      color: #343a40;
    }

    h1 {
      text-transform: uppercase;
      margin-bottom: 0.5rem;
    }

    h2 {
      color: #0d6efd;
      margin-bottom: 2rem;
      font-size: 1.4rem;
    }

    .table-container {
      background: #fff;
      padding: 1rem;
      border-radius: 0.6rem;
      box-shadow: 0 6px 18px rgba(0, 0, 0, 0.1);
    }

    .table thead {
      background-color: #0d6efd;
      color: white;
      text-transform: uppercase;
      font-size: 0.85rem;
    }

    .table tbody tr:hover {
      background-color: #f1f1f1;
    }

    @media (max-width: 576px) {
      h1 {
        font-size: 1.5rem;
      }
      h2 {
        font-size: 1.2rem;
      }
      h3 {
        font-size: 1.1rem;
      }
    }
  </style>
</head>
<body>

  <div class="container mt-5">
    <h1>Welcome, <%= user.name %></h1>
    <h2>Department Head â€” Dept ID: <%= user.department_id %></h2>

    <h3 class="mt-4 mb-3">Officers in Your Department</h3>

    <div class="table-container table-responsive">
      <table class="table table-striped table-bordered align-middle text-center">
        <thead>
          <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Job Title</th>
            <th>Handled Requests</th>
            <th>Approved</th>
            <th>Rejected</th>
          </tr>
        </thead>
        <tbody>
          <% officers.forEach(officer => { %>
            <tr>
              <td><%= officer.name %></td>
              <td><%= officer.email %></td>
              <td><%= officer.job_title || 'N/A' %></td>
              <td><%= officer.reviewedRequests.length %></td>
              <td>
                <%= officer.reviewedRequests.filter(r => r.status === 'approved').length %>
              </td>
              <td>
                <%= officer.reviewedRequests.filter(r => r.status === 'rejected').length %>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
