<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Register</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

  <style>
    body {
      background-color: #f8f9fa;
      font-family: Arial, sans-serif;
      padding: 30px 15px;
    }

    .register-card {
      max-width: 500px;
      margin: auto;
      background-color: #fff;
      padding: 30px;
      border-radius: 8px;
      box-shadow: 0 0 10px rgba(0,0,0,0.1);
    }

    h3.fw-bold.text-primary {
      text-align: center;
      margin-bottom: 1rem;
    }

    .form-label {
      font-weight: 600;
    }

    .btn-primary {
      font-weight: 600;
    }

    .message {
      margin-bottom: 20px;
    }

    .text-small {
      font-size: 0.9rem;
    }
  </style>
</head>
<body>

  <div class="register-card">
    <h3 class="fw-bold text-primary">Register Form</h3>

    <% if (success) { %>
      <div class="alert alert-success message"><%= success %></div>
    <% } %>

    <% if (error) { %>
      <div class="alert alert-danger message"><%= error %></div>
    <% } %>

    <form method="POST" action="/register" novalidate>
      <!-- Common Fields -->
      <div class="mb-3">
        <label for="name" class="form-label">Full Name:</label>
        <input type="text" class="form-control" name="name" id="name" required value="<%= old?.name || '' %>" />
      </div>

      <div class="mb-3">
        <label for="email" class="form-label">Email Address:</label>
        <input type="email" class="form-control" name="email" id="email" required value="<%= old?.email || '' %>" />
      </div>

      <div class="mb-3">
        <label for="password" class="form-label">Password:</label>
        <input type="password" class="form-control" name="password" id="password" required />
      </div>

      <div class="mb-3">
        <label for="role" class="form-label">Select Role:</label>
        <select class="form-select" name="role" id="role" required onchange="toggleFields(this.value)">
          <option value="citizen" <%= old?.role === 'citizen' ? 'selected' : '' %>>Citizen</option>
          <option value="officer" <%= old?.role === 'officer' ? 'selected' : '' %>>Officer</option>
          <option value="admin" <%= old?.role === 'admin' ? 'selected' : '' %>>Admin</option>
          <option value="headdepartment" <%= old?.role === 'headdepartment' ? 'selected' : '' %>>Head Department</option>
        </select>
      </div>

      <!-- Citizen Fields -->
      <div id="citizenFields" style="display:none;">
        <div class="mb-3">
          <label for="national_id" class="form-label">National ID:</label>
          <input type="text" class="form-control" name="national_id" id="national_id" value="<%= old?.national_id || '' %>" />
        </div>

        <div class="mb-3">
          <label for="dob" class="form-label">Date of Birth:</label>
          <input type="date" class="form-control" name="dob" id="dob" value="<%= old?.dob || '' %>" />
        </div>

        <div class="mb-3">
          <label for="contact_info" class="form-label">Contact Info:</label>
          <input type="text" class="form-control" name="contact_info" id="contact_info" value="<%= old?.contact_info || '' %>" />
        </div>
      </div>

      <!-- Officer Fields -->
      <div id="officerFields" style="display:none;">
        <div class="mb-3">
          <label for="officer_department_id" class="form-label">Department:</label>
          <select class="form-select" name="department_id" id="officer_department_id" disabled>
            <option value="">Select Department</option>
            <% if (departments?.length) { %>
              <% departments.forEach(dept => { %>
                <option value="<%= dept.id %>" <%= old?.department_id == dept.id ? 'selected' : '' %>><%= dept.name %></option>
              <% }) %>
            <% } else { %>
              <option disabled>No departments available</option>
            <% } %>
          </select>
        </div>

        <div class="mb-3">
          <label for="job_title" class="form-label">Job Title:</label>
          <input type="text" class="form-control" name="job_title" id="job_title" value="<%= old?.job_title || '' %>" />
        </div>
      </div>

      <!-- Head Department Fields -->
      <div id="headdepartmentFields" style="display:none;">
        <div class="mb-3">
          <label for="head_department_id" class="form-label">Department:</label>
          <select class="form-select" name="department_id" id="head_department_id" disabled>
            <option value="">-- Select Department --</option>
            <% departments.forEach(dept => { %>
              <option value="<%= dept.id %>" <%= old?.department_id == dept.id ? 'selected' : '' %>><%= dept.name %></option>
            <% }) %>
          </select>
        </div>
      </div>

      <button type="submit" class="btn btn-primary w-100">Register</button>
    </form>

    <p class="text-center mt-3 text-small">
      Already have an account? <a href="/login">Login</a>
    </p>
  </div>

  <script>
    function toggleFields(role) {
      // Hide all conditional sections
      document.getElementById('citizenFields').style.display = 'none';
      document.getElementById('officerFields').style.display = 'none';
      document.getElementById('headdepartmentFields').style.display = 'none';

      // Disable all department selects
      document.getElementById('officer_department_id').disabled = true;
      document.getElementById('head_department_id').disabled = true;

      if (role === 'citizen') {
        document.getElementById('citizenFields').style.display = 'block';
      } else if (role === 'officer') {
        document.getElementById('officerFields').style.display = 'block';
        document.getElementById('officer_department_id').disabled = false;
      } else if (role === 'headdepartment') {
        document.getElementById('headdepartmentFields').style.display = 'block';
        document.getElementById('head_department_id').disabled = false;
      }
    }

    window.addEventListener('DOMContentLoaded', () => {
      const selectedRole = document.getElementById('role').value;
      toggleFields(selectedRole);
    });
  </script>

</body>
</html>
