<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Apply for Service</title>

  <!-- Bootstrap CSS -->
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
    rel="stylesheet"
  />

  <style>
    body {
      font-family: Arial, sans-serif;
      background: #f9f9f9;
      padding: 40px 15px;
      min-height: 100vh;
    }
    .form-card {
      max-width: 600px;
      margin: 0 auto;
      background: #fff;
      padding: 30px 25px;
      border-radius: 8px;
      box-shadow: 0 0 10px rgba(0,0,0,0.1);
    }
    h2.fw-bold.text-primary {
      text-align: center;
      margin-bottom: 1rem;
    }
    .form-label {
      font-weight: 600;
    }
    .btn {
      font-weight: 600;
    }
  </style>
</head>
<body>

  <div class="form-card">
    <h2 class="fw-bold text-primary">Request Details</h2>

    <% if (success && success.length > 0) { %>
      <div class="alert alert-success">
        <%= success[0] %>
      </div>
    <% } %>

    <% if (error && error.length > 0) { %>
      <div class="alert alert-danger">
        <%= error[0] %>
      </div>
    <% } %>

    <form action="/citizen/apply" method="POST" enctype="multipart/form-data" class="needs-validation" novalidate>
      <!-- Department Dropdown -->
      <div class="mb-3">
        <label for="department" class="form-label">Choose a Department:</label>
        <select id="department" name="department_id" class="form-select" onchange="filterServices()" required>
          <option disabled selected value="">-- Select Department --</option>
          <% departments.forEach(dept => { %>
            <option value="<%= dept.id %>"><%= dept.name %></option>
          <% }) %>
        </select>
        <div class="invalid-feedback">Please select a department.</div>
      </div>

      <!-- Service Dropdown -->
      <div class="mb-3">
        <label for="service" class="form-label">Choose a Service:</label>
        <select name="service_id" id="service" class="form-select" required>
          <option disabled selected value="">-- Select Service --</option>
          <% services.forEach(service => { %>
            <option value="<%= service.id %>" data-dept="<%= service.department_id %>">
              <%= service.name %> ($<%= service.fee.toFixed(2) %>)
            </option>
          <% }) %>
        </select>
        <div class="invalid-feedback">Please select a service.</div>
      </div>

      <!-- Document Upload -->
      <div class="mb-3">
        <label for="document" class="form-label">Upload Document (PDF/JPG):</label>
        <input type="file" name="document" id="document" class="form-control" accept=".pdf,.jpg,.jpeg" required>
        <div class="invalid-feedback">Please upload a document.</div>
      </div>

      <button type="submit" class="btn btn-primary w-100">Submit Application</button>
    </form>

    <!-- Back to login -->
    <div class="mt-3 text-center">
      <a href="/login" class="btn btn-outline-secondary">Back to Login</a>
    </div>
  </div>

  <!-- Bootstrap JS -->
  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
  ></script>

  <script>
    function filterServices() {
      const selectedDeptId = document.getElementById('department').value;
      const serviceDropdown = document.getElementById('service');
      const options = serviceDropdown.querySelectorAll('option');

      options.forEach(option => {
        if (!option.dataset.dept) return; // skip placeholder
        option.style.display = option.dataset.dept === selectedDeptId ? 'block' : 'none';
      });

      serviceDropdown.value = '';
    }

    // Bootstrap form validation
    (() => {
      'use strict';
      const forms = document.querySelectorAll('.needs-validation');
      Array.from(forms).forEach(form => {
        form.addEventListener('submit', event => {
          if (!form.checkValidity()) {
            event.preventDefault();
            event.stopPropagation();
          }
          form.classList.add('was-validated');
        }, false);
      });
    })();

    // Hide services on load
    window.onload = () => {
      filterServices();
    };
  </script>

</body>
</html>
