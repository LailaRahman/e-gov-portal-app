<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8"/>
  <meta name="viewport" content="width=device-width, initial-scale=1"/>
  <title>Officer Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"/>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

  <style>
    body {
      background: #f8fafc;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      padding-bottom: 2rem;
    }

    .dashboard-header {
      background: #fff;
      padding: 1rem 0;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
      margin-bottom: 2rem;
    }

    .dashboard-header nav {
      justify-content: center;
      flex-wrap: wrap;
    }

    .dashboard-header nav a {
      font-weight: 600;
      color: #495057;
      margin: 0 1rem;
      font-size: 1.05rem;
      transition: color 0.3s;
      text-decoration: none;
    }

    .dashboard-header nav a:hover,
    .dashboard-header nav a.active {
      color: #0d6efd;
    }
.dashboard-header nav a.btn-outline-primary:hover {
  color: white !important;
  background-color: #0d6efd !important;
  border-color: #0d6efd !important;
}

 h2.fw-bold.text-primary {
      text-align: center;
      margin-bottom: 1rem;
    }


    .alert {
      max-width: 600px;
      margin: 1rem auto;
      font-weight: 600;
      border-radius: 0.5rem;
    }

    .table-container {
      background: #fff;
      padding: 1rem;
      border-radius: 0.6rem;
      box-shadow: 0 6px 18px rgba(0,0,0,0.1);
      overflow-x: auto;
    }

    .table thead th {
      background-color: #0d6efd;
      color: #fff;
      text-transform: uppercase;
      font-size: 0.9rem;
    }

    .btn-update {
      margin-top: 0.5rem;
    }

    .filter-form {
      margin-bottom: 1.5rem;
    }

    @media (max-width: 576px) {
      .dashboard-header nav a {
        margin: 0 0.5rem;
        font-size: 0.95rem;
      }

      h1 {
        font-size: 1.5rem;
      }
    }
  </style>
</head>
<body>

  <!-- Dashboard Nav -->
  <div class="dashboard-header">
    <div class="container">
      <nav class="d-flex align-items-center">
        <a href="/officer/dashboard" class="active">Dashboard</a>
        <a href="/officer/profile">My Profile</a>
        <a href="/logout" class="btn btn-outline-primary fw-bold ms-auto">Logout</a>
      </nav>
    </div>
  </div>

  <div class="container">
    <h2 class="fw-bold text-primary">Officer Dashboard</h2>

    <p class="text-center fw-semibold text-secondary mb-4">
      Welcome, <%= user?.name %> (Dept ID: <%= user?.department_id %>)
    </p>

    <!-- Filter Form -->
    <form method="GET" action="/officer/dashboard" class="row g-3 justify-content-center filter-form">
      <div class="col-md-3">
        <input type="text" name="name" class="form-control" placeholder="Citizen Name" value="<%= filters?.name || '' %>">
      </div>

      <div class="col-md-3">
        <select name="status" class="form-select">
          <option value="">All Statuses</option>
          <option value="submitted" <%= filters?.status === 'submitted' ? 'selected' : '' %>>Submitted</option>
          <option value="under_review" <%= filters?.status === 'under_review' ? 'selected' : '' %>>Under Review</option>
          <option value="approved" <%= filters?.status === 'approved' ? 'selected' : '' %>>Approved</option>
          <option value="rejected" <%= filters?.status === 'rejected' ? 'selected' : '' %>>Rejected</option>
        </select>
      </div>

      <div class="col-md-3">
        <select name="service_id" class="form-select">
          <option value="">All Services</option>
          <% if (services && services.length > 0) { %>
            <% services.forEach(s => { %>
              <option value="<%= s.id %>" <%= filters?.service_id == s.id ? 'selected' : '' %>><%= s.name %></option>
            <% }) %>
          <% } %>
        </select>
      </div>

      <div class="col-md-2">
        <button type="submit" class="btn btn-primary w-100">Filter</button>
      </div>
    </form>

    <% if (success && success.length > 0) { %>
      <div class="alert alert-success alert-dismissible fade show" role="alert">
        <%= success[0] %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% } %>

    <% if (error && error.length > 0) { %>
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <%= error[0] %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% } %>

    <div class="table-container">
      <table class="table table-hover table-striped align-middle text-center">
        <thead>
          <tr>
            <th>#</th>
            <th>Citizen</th>
            <th>Service</th>
            <th>Status</th>
            <th>Submitted On</th>
            <th>Update Status</th>
            <th>Details</th>
          </tr>
        </thead>
        <tbody>
          <% if (!requests || requests.length === 0) { %>
            <tr>
              <td colspan="7" class="text-muted">No requests for your department yet.</td>
            </tr>
          <% } else { %>
            <% requests.forEach((r, i) => { %>
              <tr>
                <td><%= i + 1 %></td>
                <td><%= r.Citizen?.name || 'N/A' %></td>
                <td><%= r.service?.name || 'N/A' %></td>
                <td class="text-capitalize"><%= r.status?.replace('_', ' ') %></td>
                <td><%= new Date(r.createdAt).toLocaleDateString() %></td>
                <td>
                  <form method="POST" action="/officer/requests/<%= r.id %>/status" class="d-flex flex-column align-items-center">
                    <select name="status" class="form-select form-select-sm w-auto">
                      <option value="under_review" <%= r.status === 'under_review' ? 'selected' : '' %>>Under Review</option>
                      <option value="approved" <%= r.status === 'approved' ? 'selected' : '' %>>Approve</option>
                      <option value="rejected" <%= r.status === 'rejected' ? 'selected' : '' %>>Reject</option>
                    </select>
                    <button type="submit" class="btn btn-sm btn-primary btn-update">Update</button>
                  </form>
                </td>
                <td>
                  <a href="/officer/requests/<%= r.id %>" class="btn btn-sm btn-outline-secondary">View</a>
                </td>
              </tr>
            <% }) %>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
