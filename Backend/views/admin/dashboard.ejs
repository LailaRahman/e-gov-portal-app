<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Admin Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

  <style>
    body {
      background: #f8fafc;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      min-height: 100vh;
    }
    .dashboard-header {
      background: #fff;
      padding: 1rem 0;
      box-shadow: 0 4px 10px rgb(0 0 0 / 0.05);
      margin-bottom: 2.5rem;
    }
    .dashboard-header nav {
      justify-content: center;
    }
    .dashboard-header nav a {
      font-weight: 600;
      color: #495057;
      margin: 0 1rem;
      font-size: 1.05rem;
      position: relative;
      padding-bottom: 3px;
      transition: color 0.3s ease;
      text-decoration: none;
    }
    .dashboard-header nav a:hover,
    .dashboard-header nav a.active {
      color: #0d6efd;
    }
    .card {
      border-radius: 0.6rem;
      box-shadow: 0 8px 20px rgb(0 0 0 / 0.1);
      transition: transform 0.25s ease, box-shadow 0.25s ease;
      border-left-width: 6px !important;
    }
    .card:hover {
      transform: translateY(-8px);
      box-shadow: 0 12px 30px rgb(0 0 0 / 0.15);
    }
    .card-title {
      font-weight: 700;
      font-size: 1rem;
      color: #6c757d;
      letter-spacing: 0.03em;
      text-transform: uppercase;
    }
    .card-text {
      font-size: 2.5rem;
      font-weight: 700;
      margin-top: 0.3rem;
      color: inherit;
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }
    .card .icon {
      font-size: 2.8rem;
      opacity: 0.25;
    }
    .border-primary {
      border-color: #0d6efd !important;
      color: #0d6efd;
    }
    .border-success {
      border-color: #198754 !important;
      color: #198754;
    }
    .dashboard-header nav .btn-outline-primary:hover {
    color: #fff !important;
    background-color: #2255cf !important;
    border-color: #3342cd !important;}

    .border-info {
      border-color: #0dcaf0 !important;
      color: #0dcaf0;
    }
    h2.fw-bold.text-primary {
      text-align: center;
      margin-bottom: 3rem;
    }

  </style>
</head>
<body>

  <!-- Navigation -->
  <% if (user && user.role === 'admin') { %>
    <div class="dashboard-header">
      <div class="container d-flex">
        <nav class="d-flex align-items-center w-100">
          <a href="/admin/dashboard" class="active">Dashboard</a>
          <a href="/admin/users">Users</a>
          <a href="/admin/departments">Departments</a>
          <a href="/admin/services">Services</a>
          <a href="/logout" class="btn btn-outline-primary ms-auto">Logout</a>
        </nav>
      </div>
    </div>
  <% } %>

  <div class="container px-3">
    <h2 class="fw-bold text-primary">Admin Dashboard</h2>

    <!-- Metric Cards -->
    <div class="row g-4 mb-5">
      <div class="col-md-6 col-lg-3">
        <div class="card border-primary bg-white p-4">
          <h6 class="card-title">Total Requests</h6>
          <p class="card-text text-primary">
            <i class="bi bi-stack icon"></i> <%= totalRequests ?? 0 %>
          </p>
        </div>
      </div>

      <div class="col-md-6 col-lg-3">
        <div class="card border-success bg-white p-4">
          <h6 class="card-title">Approved</h6>
          <p class="card-text text-success">
            <i class="bi bi-check-circle icon"></i> <%= approved ?? 0 %>
          </p>
        </div>
      </div>

      <div class="col-md-6 col-lg-3">
        <div class="card border-danger bg-white p-4">
          <h6 class="card-title">Rejected</h6>
          <p class="card-text text-danger">
            <i class="bi bi-x-circle icon"></i> <%= rejected ?? 0 %>
          </p>
        </div>
      </div>

      <div class="col-md-6 col-lg-3">
        <div class="card border-info bg-white p-4">
          <h6 class="card-title">Total Revenue</h6>
          <p class="card-text text-info">
            <i class="bi bi-currency-dollar icon"></i> $<%= revenue ? Number(revenue).toFixed(2) : '0.00' %>
          </p>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
