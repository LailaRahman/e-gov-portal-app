<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Users List</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
  <style>
    body {
      background: #f8fafc;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      min-height: 100vh;
      padding-bottom: 2rem;
    }

    /* Dashboard Header */
    .dashboard-header {
      background: #fff;
      padding: 1rem 0;
      box-shadow: 0 4px 10px rgba(0,0,0,0.05);
      margin-bottom: 2.5rem;
    }
    .dashboard-header nav {
      justify-content: center;
    }
    .dashboard-header nav a {
      font-weight: 600;
      color: #495057;
      margin: 0 1.5rem;
      font-size: 1.05rem;
      transition: color 0.3s;
      position: relative;
      padding-bottom: 3px;
      white-space: nowrap;
    }
    .dashboard-header nav a:hover,
    .dashboard-header nav a.active {
      color: #0d6efd;
    }
    .dashboard-header .btn-outline-primary:hover {
  color: #fff !important;
  background-color: #0d6efd !important;
  border-color: #0d6efd !important;
}
h2.fw-bold.text-primary {
      text-align: center;
      margin-bottom: 3rem;
    }

    /* Table Styles */
    .table-container {
      background: #fff;
      padding: 1rem;
      border-radius: 0.6rem;
      box-shadow: 0 6px 18px rgba(0,0,0,0.1);
      overflow-x: auto;
    }
    table {
      width: 100%;
      margin-bottom: 0;
      table-layout: fixed; /* prevent horizontal overflow */
      word-wrap: break-word; /* wrap long text */
    }
    th {
      background-color: #0d6efd;
      color: #fff;
      text-transform: uppercase;
      font-weight: 600;
      letter-spacing: 0.05em;
    }
    td, th {
      vertical-align: middle !important;
      text-overflow: ellipsis;
      overflow: hidden;
    }

    /* Alerts */
    .alert {
      max-width: 600px;
      margin: 1rem auto;
      font-weight: 600;
      border-radius: 0.5rem;
    }

    /* Back Button */
    .btn-back {
      display: block;
      max-width: 220px;
      margin: 2rem auto 0;
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 0.05em;
      box-shadow: 0 4px 10px rgba(13,110,253,0.3);
      transition: background-color 0.3s, box-shadow 0.3s;
    }
    .btn-back:hover {
      background-color: #0b5ed7;
      box-shadow: 0 6px 15px rgba(11,94,215,0.6);
    }

    /* Responsive adjustments */
    @media (max-width: 768px) {
      table td, table th {
        font-size: 0.875rem;
        white-space: normal; /* wrap text instead of scrolling */
      }
    }

    @media (max-width: 576px) {
      .dashboard-header nav a {
        margin: 0 0.5rem;
        font-size: 0.95rem;
      }
      h2 {
        font-size: 1.5rem;
      }
      table td, table th {
        font-size: 0.8rem;
      }
    }
  </style>
</head>
<body>

 <!-- Navigation -->
  <% if (user && user.role === 'admin') { %>
    <div class="dashboard-header">
      <div class="container d-flex">
        <nav class="d-flex align-items-center w-100">
          <a href="/admin/dashboard">Dashboard</a>
          <a href="/admin/users" class="active">Users</a>
          <a href="/admin/departments">Departments</a>
          <a href="/admin/services">Services</a>
          <a href="/logout" class="btn btn-outline-primary ms-auto">Logout</a>
        </nav>
      </div>
    </div>
  <% } %>

  <div class="container">
   <h2 class="fw-bold text-primary">User Information</h2>
    <% if (success && success.length) { %>
      <div class="alert alert-success alert-dismissible fade show" role="alert">
        <%= success[0] %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% } %>
    <% if (error && error.length) { %>
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <%= error[0] %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% } %>

<!-- Corrected Search & Filter Form for Users -->
<form action="/admin/users" method="GET" class="row g-3 mb-4">
  <div class="col-md-3">
    <input type="text" class="form-control" name="name" placeholder="User Name" value="<%= filters?.name || '' %>">
  </div>

  <div class="col-md-3">
    <input type="text" class="form-control" name="email" placeholder="Email" value="<%= filters?.email || '' %>">
  </div>

  <div class="col-md-3">
    <select name="role" class="form-select">
      <option value="">All Roles</option>
      <option value="admin" <%= filters?.role === 'admin' ? 'selected' : '' %>>Admin</option>
      <option value="officer" <%= filters?.role === 'officer' ? 'selected' : '' %>>Officer</option>
      <option value="headdepartment" <%= filters?.role === 'headdepartment' ? 'selected' : '' %>>Head Department</option>
      <option value="citizen" <%= filters?.role === 'citizen' ? 'selected' : '' %>>Citizen</option>
    </select>
  </div>

  <div class="col-md-3">
    <select name="department_id" class="form-select">
      <option value="">All Departments</option>
      <% if (departments && departments.length) { %>
        <% departments.forEach(dept => { %>
          <option value="<%= dept.id %>" <%= filters?.department_id == dept.id ? 'selected' : '' %>><%= dept.name %></option>
        <% }) %>
      <% } %>
    </select>
  </div>

  <div class="col-12 text-end">
    <button type="submit" class="btn btn-primary">Search</button>
  </div>
</form>

    <div class="table-container">
      <table class="table table-striped table-hover align-middle">
        <thead>
          <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Role</th>
            <th>Department</th>
          </tr>
        </thead>
        <tbody>
          <% users.forEach(user => { %>
            <tr>
              <td><%= user.id %></td>
              <td><%= user.name %></td>
              <td><%= user.email %></td>
              <td class="text-capitalize"><%= user.role %></td>
              <td><%= user.department ? user.department.name : 'N/A' %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
