<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Manage Departments</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
  <style>
    body {
      background-color: #f8f9fa;
    }
    /* Navigation */
    .dashboard-header {
      background: #fff;
      padding: 1rem 0;
      box-shadow: 0 4px 10px rgba(0,0,0,0.05);
      margin-bottom: 2.5rem;
    }

    .dashboard-header nav {
      justify-content: center;
      flex-wrap: wrap;
    }

    .dashboard-header nav a {
      font-weight: 600;
      color: #495057;
      margin: 0 1rem;
      font-size: 1.05rem;
      transition: color 0.3s;
      position: relative;
      padding-bottom: 3px;
      white-space: nowrap;
    }

    .dashboard-header nav a:hover,
    .dashboard-header nav a.active {
      color: #0d6efd;
    }
    .dashboard-header .btn-outline-primary:hover {
  color: #fff !important;
  background-color: #0d6efd !important;
  border-color: #0d6efd !important;
}
    h2.fw-bold.text-primary {
      text-align: center;
      margin-bottom: 3rem;
    }
    form.input-group {
      max-width: 450px;
    }
    ul.list-group li.list-group-item {
      display: flex;
      justify-content: space-between;
      align-items: center;
      font-size: 1.05rem;
      transition: background-color 0.2s ease;
    }
    ul.list-group li.list-group-item:hover {
      background-color: #e9ecef;
    }
    .btn-danger {
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 0.25rem 0.5rem;
      font-size: 1rem;
      line-height: 1;
      border-radius: 0.375rem;
      transition: background-color 0.3s ease;
    }
    .btn-danger:hover {
      background-color: #b02a37;
    }
    @media (max-width: 576px) {
      .dashboard-header nav {
        flex-direction: column;
        gap: 0.5rem;
      }
      ul.list-group li.list-group-item {
        flex-direction: column;
        align-items: flex-start;
        gap: 0.5rem;
      }
    }
  </style>
</head>
<body>

 <!-- Navigation -->
  <% if (user && user.role === 'admin') { %>
    <div class="dashboard-header">
      <div class="container d-flex">
        <nav class="d-flex align-items-center w-100">
          <a href="/admin/dashboard">Dashboard</a>
          <a href="/admin/users">Users</a>
          <a href="/admin/departments" class="active">Departments</a>
          <a href="/admin/services">Services</a>
          <a href="/logout" class="btn btn-outline-primary ms-auto">Logout</a>
        </nav>
      </div>
    </div>
  <% } %>
  <!-- Main Content -->
  <div class="container">
    <h2 class="fw-bold text-primary">Manage Departments</h2>

    <!-- Add New Department Form -->
     <div class="d-flex justify-content-center mb-4">
    <form method="POST" action="/admin/departments" class="input-group">
      <input
        type="text"
        name="name"
        class="form-control"
        placeholder="New Department Name"
        required
        aria-label="New Department Name"
      />
      <button type="submit" class="btn btn-primary">Add</button>
    </form>
</div>
    <!-- Departments List -->
    <div class="card shadow-sm">
      <div class="card-header fw-semibold fs-5">Departments</div>
      <ul class="list-group list-group-flush">
        <% if (departments.length === 0) { %>
          <li class="list-group-item text-muted fst-italic">No departments found.</li>
        <% } else { %>
          <% departments.forEach(department => { %>
            <li class="list-group-item">
              <span><%= department.name %></span>
              <form
                method="POST"
                action="/admin/departments/<%= department.id %>?_method=DELETE"
                style="margin:0;"
              >
                <button
                  type="submit"
                  class="btn btn-sm btn-danger ms-2"
                  onclick="return confirm('Are you sure you want to delete this department?');"
                  aria-label="Delete <%= department.name %>"
                >
                  <i class="bi bi-trash"></i>
                </button>
              </form>
            </li>
          <% }) %>
        <% } %>
      </ul>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
