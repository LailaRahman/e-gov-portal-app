<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Manage Services</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
  <style>
    body {
      background: #f8fafc;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      padding-bottom: 2rem;
    }

    /* Navigation */
    .dashboard-header {
      background: #fff;
      padding: 1rem 0;
      box-shadow: 0 4px 10px rgba(0,0,0,0.05);
      margin-bottom: 2.5rem;
    }

    .dashboard-header nav {
      justify-content: center;
      flex-wrap: wrap;
    }

    .dashboard-header nav a {
      font-weight: 600;
      color: #495057;
      margin: 0 1rem;
      font-size: 1.05rem;
      transition: color 0.3s;
      position: relative;
      padding-bottom: 3px;
      white-space: nowrap;
    }

    .dashboard-header nav a:hover,
    .dashboard-header nav a.active {
      color: #0d6efd;
    }

     .dashboard-header .btn-outline-primary:hover {
  color: #fff !important;
  background-color: #0d6efd !important;
  border-color: #0d6efd !important;
}

h2.fw-bold.text-primary {
      text-align: center;
      margin-bottom: 3rem;
    }
    .alert {
      max-width: 600px;
      margin: 1rem auto;
      font-weight: 600;
      border-radius: 0.5rem;
    }

    .card {
      border-radius: 0.6rem;
      box-shadow: 0 6px 18px rgba(0,0,0,0.1);
      overflow: hidden;
      margin-bottom: 2rem;
    }

    .card-header {
      background-color: #0d6efd;
      color: #fff;
      font-weight: 600;
      letter-spacing: 0.05em;
      text-transform: uppercase;
    }

    .btn-back,
    .btn-logout {
      display: block;
      max-width: 220px;
      margin: 2rem auto 0;
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 0.05em;
      box-shadow: 0 4px 10px rgba(13,110,253,0.3);
      transition: background-color 0.3s, box-shadow 0.3s;
    }

    .btn-logout:hover {
      background-color: #dc3545;
      color: white;
    }

    @media (max-width: 576px) {
      .dashboard-header nav a {
        margin: 0 0.5rem;
        font-size: 0.95rem;
      }

      h1 {
        font-size: 1.5rem;
      }
    }
  </style>
</head>
<body>

 <!-- Navigation -->
  <% if (user && user.role === 'admin') { %>
    <div class="dashboard-header">
      <div class="container d-flex">
        <nav class="d-flex align-items-center w-100">
          <a href="/admin/dashboard">Dashboard</a>
          <a href="/admin/users">Users</a>
          <a href="/admin/departments">Departments</a>
          <a href="/admin/services" class="active">Services</a>
          <a href="/logout" class="btn btn-outline-primary ms-auto">Logout</a>
        </nav>
      </div>
    </div>
  <% } %>

  <!-- Main Container -->
  <div class="container">
     <h2 class="fw-bold text-primary">Manage Services</h2>

    <!-- Flash Messages -->
    <% if (success && success.length > 0) { %>
      <div class="alert alert-success alert-dismissible fade show" role="alert">
        <%= success[0] %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% } %>
    <% if (error && error.length > 0) { %>
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <%= error[0] %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% } %>

    <!-- Add Service Form -->
    <div class="card">
      <div class="card-header">Add New Service</div>
      <div class="card-body">
        <form method="POST" action="/admin/services">
          <div class="mb-3">
            <label for="name" class="form-label">Service Name</label>
            <input type="text" id="name" name="name" class="form-control" placeholder="e.g., Birth Certificate" required />
          </div>

          <div class="mb-3">
            <label for="fee" class="form-label">Fee (USD)</label>
            <input type="number" id="fee" name="fee" step="0.01" class="form-control" placeholder="e.g., 25.00" required />
          </div>

          <div class="mb-3">
            <label for="departmentId" class="form-label">Department</label>
            <select id="departmentId" name="departmentId" class="form-select" required>
              <option value="">-- Select Department --</option>
              <% departments.forEach(dept => { %>
                <option value="<%= dept.id %>"><%= dept.name %></option>
              <% }) %>
            </select>
          </div>

          <button type="submit" class="btn btn-primary">Add Service</button>
        </form>
      </div>
    </div>

    <!-- Services Table -->
    <div class="card">
      <div class="card-header">Existing Services</div>
      <div class="table-responsive">
        <table class="table table-bordered table-striped mb-0">
          <thead class="table-light">
            <tr>
              <th>Service Name</th>
              <th>Fee (USD)</th>
              <th>Department</th>
            </tr>
          </thead>
          <tbody>
            <% if (services.length === 0) { %>
              <tr>
                <td colspan="3" class="text-center text-muted">No services added yet.</td>
              </tr>
            <% } else { %>
              <% services.forEach(service => { %>
                <tr>
                  <td><%= service.name %></td>
                  <td>$<%= service.fee.toFixed(2) %></td>
                  <td><%= service.department ? service.department.name : 'N/A' %></td>
                </tr>
              <% }) %>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
